<?xml version="1.0" encoding="utf-8"?>
<android.support.design.widget.CoordinatorLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.dwakenya.homecarehub.newdwa.RegisterActivity"
    tools:showIn="@layout/activity_register">

    <ScrollView
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:layout_marginTop="5dp"
        android:paddingLeft="6dp"
        android:scrollbars="none"
        android:paddingRight="6dp"
        android:fitsSystemWindows="true">

        <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            >

            <LinearLayout
                android:orientation="vertical"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                >


                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10dp"
                    android:fontFamily="@font/oxygen_bold"
                    android:text="First Name"
                    android:textColor="#000"
                    android:textSize="12sp"
                    android:textStyle="normal" />

                <!--  First Name Label -->
                    <EditText android:id="@+id/input_name"
                        android:layout_width="match_parent"
                        android:inputType="textCapWords"
                        android:textColor="#000000"
                        android:layout_height="50dp"
                        android:layout_marginTop="8dp"
                        android:background="@drawable/bg_gray"
                        android:textCursorDrawable="@drawable/cursor_color"
                        android:backgroundTint="@color/colorAccent"
                        android:hint="First Name" />

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10dp"
                    android:fontFamily="@font/oxygen_bold"
                    android:text="Last Name"
                    android:textColor="#000"
                    android:textSize="12sp"
                    android:textStyle="normal" />

                <!--  Last Name Label -->
                    <EditText android:id="@+id/input_lname"
                        android:layout_width="match_parent"
                        android:layout_height="50dp"
                        android:layout_marginTop="8dp"
                        android:background="@drawable/bg_gray"
                        android:inputType="textCapWords"
                        android:textColor="#000000"
                        android:textCursorDrawable="@drawable/cursor_color"
                        android:backgroundTint="@color/colorAccent"
                        android:hint="Last Name" />

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10dp"
                    android:fontFamily="@font/oxygen_bold"
                    android:text="ID Number"
                    android:textColor="#000"
                    android:textSize="12sp"
                    android:textStyle="normal" />

                <!--  ID Label -->
                    <EditText android:id="@+id/input_id"
                        android:layout_width="match_parent"
                        android:layout_height="50dp"
                        android:layout_marginTop="8dp"
                        android:background="@drawable/bg_gray"
                        android:inputType="number"
                        android:textColor="#000000"
                        android:textCursorDrawable="@drawable/cursor_color"
                        android:backgroundTint="@color/colorAccent"
                        android:hint="ID Number" />

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="10dp"
                        android:fontFamily="@font/oxygen_bold"
                        android:text="Phone Number"
                        android:textColor="#000"
                        android:id="@+id/phonenumber"
                        android:textSize="12sp"
                        android:textStyle="normal" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="10dp"

                        android:fontFamily="@font/oxygen_bold"
                        android:text="*e.g 0701675461"
                        android:textColor="@color/colorAccent"
                        android:layout_marginStart="10dp"
                        android:textSize="12sp"
                        android:layout_toEndOf="@+id/phonenumber"
                        android:textStyle="normal"
                        android:layout_marginLeft="20dp"
                        android:layout_toRightOf="@+id/phonenumber" />

                </RelativeLayout>


                <!--  Phone Label -->
                    <EditText android:id="@+id/input_phone"
                        android:layout_width="match_parent"
                        android:layout_height="50dp"
                        android:layout_marginTop="8dp"
                        android:background="@drawable/bg_gray"
                        android:inputType="phone"
                        android:textColor="#000000"
                        android:textCursorDrawable="@drawable/cursor_color"
                        android:backgroundTint="@color/colorAccent"
                        android:hint="Phone Number" />

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10dp"
                    android:fontFamily="@font/oxygen_bold"
                    android:text="Email Address"
                    android:textColor="#000"
                    android:textSize="12sp"
                    android:textStyle="normal" />

                <!-- Email Label -->
                    <EditText android:id="@+id/input_email"
                        android:layout_width="match_parent"
                        android:layout_height="50dp"
                        android:layout_marginTop="8dp"
                        android:background="@drawable/bg_gray"
                        android:inputType="textEmailAddress"
                        android:textColor="#000000"
                        android:textCursorDrawable="@drawable/cursor_color"
                        android:backgroundTint="@color/colorAccent"
                        android:hint="Email Address" />

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10dp"
                    android:fontFamily="@font/oxygen_bold"
                    android:text="Select County/Town"
                    android:textColor="#000"
                    android:textSize="12sp"
                    android:textStyle="normal" />


                <!-- County/ Town Label -->
                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_marginTop="8dp"
                    android:backgroundTint="@color/colorAccent"
                    android:background="@drawable/bg_gray"
                    android:layout_height="52dp">

                    <com.toptoche.searchablespinnerlibrary.SearchableSpinner
                        android:id="@+id/sp_county_town"
                        android:backgroundTint="@color/colorAccent"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent" />

                </RelativeLayout>

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10dp"
                    android:fontFamily="@font/oxygen_bold"
                    android:text="Current Location"
                    android:textColor="#000"
                    android:textSize="12sp"
                    android:textStyle="normal" />

                <!-- Email Label -->
                <EditText android:id="@+id/currentLocation"
                    android:layout_width="match_parent"
                    android:layout_height="50dp"
                    android:layout_marginTop="8dp"
                    android:background="@drawable/bg_gray"
                    android:inputType="text"
                    android:textColor="#000000"
                    android:textCursorDrawable="@drawable/cursor_color"
                    android:backgroundTint="@color/colorAccent"
                    android:hint="Current Location" />


                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10dp"
                    android:fontFamily="@font/oxygen_bold"
                    android:text="Password"
                    android:textColor="#000"
                    android:textSize="12sp"
                    android:textStyle="normal" />
                <!-- Password Label -->
                    <EditText android:id="@+id/input_password"
                        android:layout_width="match_parent"
                        android:layout_height="50dp"
                        android:layout_marginTop="8dp"
                        android:background="@drawable/bg_gray"
                        android:inputType="textPassword"
                        android:textColor="#000000"
                        android:textCursorDrawable="@drawable/cursor_color"
                        android:backgroundTint="@color/colorAccent"
                        android:hint="Password"/>

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10dp"
                    android:fontFamily="@font/oxygen_bold"
                    android:text="Confirm Password"
                    android:textColor="#000"
                    android:textSize="12sp"
                    android:textStyle="normal" />

                <!-- Verify Password Label -->
                    <EditText android:id="@+id/input_vpassword"
                        android:layout_width="match_parent"
                        android:layout_height="50dp"
                        android:layout_marginTop="8dp"
                        android:background="@drawable/bg_gray"
                        android:inputType="textPassword"
                        android:textColor="#000000"
                        android:textCursorDrawable="@drawable/cursor_color"
                        android:backgroundTint="@color/colorAccent"
                        android:hint="Confirm Password"/>

            </LinearLayout>


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:orientation="vertical">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:layout_gravity="center"
                    android:text="Register as?"
                    android:textColor="@color/subtitle"
                    android:textStyle="bold"/>

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">


                    <android.support.v7.widget.AppCompatButton

                        android:id="@+id/btn_signupEmployee"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentLeft="true"
                        android:layout_marginBottom="12dp"
                        android:layout_marginTop="12dp"
                        android:paddingLeft="36dp"
                        android:paddingStart="36dp"
                        android:paddingRight="36dp"
                        android:paddingEnd="36dp"
                        android:background="@drawable/rounded_border_edittext_filled"
                        android:padding="12dp"
                        android:text="Employee"
                        android:textColor="#ffffff" />


                    <android.support.v7.widget.AppCompatButton
                        android:id="@+id/btn_signupEmployer"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentRight="true"
                        android:layout_marginBottom="12dp"
                        android:layout_marginTop="12dp"
                        android:paddingLeft="36dp"
                        android:paddingStart="36dp"
                        android:paddingRight="36dp"
                        android:paddingEnd="36dp"
                        android:background="@drawable/rounded_border_edittext"
                        android:padding="12dp"
                        android:text="Employer"
                        android:textColor="@color/colorAccent" />


                </RelativeLayout>


                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="6dp"
                    android:layout_marginBottom="16dp"
                    android:layout_gravity="center"
                    android:gravity="center"
                    android:orientation="horizontal">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textColor="@color/black"
                        android:text="Already registered?"
                        />
                    <TextView android:id="@+id/link_login"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textColor="@color/colorPrimaryDark"
                        android:text=" Login Here"
                        />

                </LinearLayout>


            </LinearLayout>



        </LinearLayout>

    </ScrollView>

</android.support.design.widget.CoordinatorLayout>