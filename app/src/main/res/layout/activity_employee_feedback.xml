<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".EmployeeFeedback">

    <ScrollView
        android:layout_width="match_parent"
        android:scrollbars="none"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:orientation="vertical"
            android:padding="15dp"
            android:layout_height="wrap_content">

            <TextView
                android:layout_width="match_parent"
                android:text="Employee Feedback Form"
                android:textSize="18sp"
                android:textColor="#000"
                android:fontFamily="@font/oxygen_bold"
                android:textAlignment="center"
                android:layout_height="wrap_content" />

            <View
                android:layout_width="match_parent"
                android:layout_marginTop="10dp"
                android:layout_marginBottom="15dp"
                android:background="@android:color/black"
                android:layout_height="1dp"/>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:textAlignment="center"
                android:textColor="@color/white"
                android:textSize="20dp"
                android:background="@drawable/titleborder"
                android:text="Employee information"/>

            <LinearLayout
                android:layout_width="match_parent"
                android:orientation="vertical"
                android:padding="10dp"
                android:background="@drawable/feedborder"
                android:layout_height="wrap_content">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10dp"
                    android:fontFamily="@font/oxygen_bold"
                    android:text="Employee name *"
                    android:textColor="#000"
                    android:textSize="12sp"
                    android:textStyle="normal" />


                <EditText
                    android:id="@+id/employee_name"
                    android:layout_width="match_parent"
                    android:background="@drawable/bg_gray"
                    android:layout_height="50dp"
                    android:layout_marginTop="8dp"
                    android:hint="Employee name"
                    android:inputType="text" />

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10dp"
                    android:fontFamily="@font/oxygen_bold"
                    android:text="Date service was requested *"
                    android:textColor="#000"
                    android:textSize="12sp"
                    android:textStyle="normal" />


                <TextView
                    android:id="@+id/employee_request"
                    android:layout_width="match_parent"
                    android:background="@drawable/bg_gray"
                    android:layout_height="50dp"
                    android:textSize="18sp"
                    android:gravity="center_vertical"
                    android:layout_marginTop="8dp"
                    android:hint="Date service was requested" />

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10dp"
                    android:fontFamily="@font/oxygen_bold"
                    android:text="Location of service *"
                    android:textColor="#000"
                    android:textSize="12sp"
                    android:textStyle="normal" />


                <EditText
                    android:id="@+id/employee_location"
                    android:layout_width="match_parent"
                    android:background="@drawable/bg_gray"
                    android:layout_height="50dp"
                    android:layout_marginTop="8dp"
                    android:hint="Location of service"
                    android:inputType="textEmailAddress" />

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10dp"
                    android:fontFamily="@font/oxygen_bold"
                    android:text="Date service was performed *"
                    android:textColor="#000"
                    android:textSize="12sp"
                    android:textStyle="normal" />


                <TextView
                    android:id="@+id/employee_perform"
                    android:layout_width="match_parent"
                    android:background="@drawable/bg_gray"
                    android:layout_height="50dp"
                    android:textSize="18sp"
                    android:gravity="center_vertical"
                    android:layout_marginTop="8dp"
                    android:hint="Date service was performed"/>

            </LinearLayout>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:layout_marginTop="15dp"
                android:textAlignment="center"
                android:textColor="@color/white"
                android:textSize="20dp"
                android:background="@drawable/titleborder"
                android:text="Review of employer"/>

            <LinearLayout
                android:layout_width="match_parent"
                android:orientation="vertical"
                android:padding="10dp"
                android:background="@drawable/feedborder"
                android:layout_height="wrap_content">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10dp"
                    android:fontFamily="@font/oxygen_bold"
                    android:text="Workload *"
                    android:textColor="#000"
                    android:textSize="12sp"
                    android:textStyle="normal" />


                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_marginTop="8dp"
                    android:background="@drawable/bg_gray"
                    android:layout_height="50dp">

                    <com.toptoche.searchablespinnerlibrary.SearchableSpinner
                        android:id="@+id/sp_workload"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent" />

                </RelativeLayout>
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10dp"
                    android:fontFamily="@font/oxygen_bold"
                    android:text="Salary/Pay *"
                    android:textColor="#000"
                    android:textSize="12sp"
                    android:textStyle="normal" />


                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_marginTop="8dp"
                    android:background="@drawable/bg_gray"
                    android:layout_height="50dp">

                    <com.toptoche.searchablespinnerlibrary.SearchableSpinner
                        android:id="@+id/sp_salary"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent" />

                </RelativeLayout>

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10dp"
                    android:fontFamily="@font/oxygen_bold"
                    android:text="Working conditions *"
                    android:textColor="#000"
                    android:textSize="12sp"
                    android:textStyle="normal" />


                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_marginTop="8dp"
                    android:background="@drawable/bg_gray"
                    android:layout_height="50dp">

                    <com.toptoche.searchablespinnerlibrary.SearchableSpinner
                        android:id="@+id/sp_conditions"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent" />

                </RelativeLayout>

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10dp"
                    android:fontFamily="@font/oxygen_bold"
                    android:text="Employer communication skills *"
                    android:textColor="#000"
                    android:textSize="12sp"
                    android:textStyle="normal" />


                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_marginTop="8dp"
                    android:background="@drawable/bg_gray"
                    android:layout_height="50dp">

                    <com.toptoche.searchablespinnerlibrary.SearchableSpinner
                        android:id="@+id/sp_communication"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent" />

                </RelativeLayout>


            </LinearLayout>


            <TextView
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:layout_marginTop="10dp"
                android:textAlignment="center"
                android:textColor="@color/white"
                android:textSize="20dp"
                android:background="@drawable/titleborder"
                android:text="Comments"/>

            <LinearLayout
                android:layout_width="match_parent"
                android:orientation="vertical"
                android:padding="10dp"
                android:background="@drawable/feedborder"
                android:layout_height="wrap_content">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10dp"
                    android:fontFamily="@font/oxygen_bold"
                    android:text="Comments"
                    android:textColor="#000"
                    android:textSize="12sp"
                    android:textStyle="normal" />


                <EditText
                    android:id="@+id/employee_comments"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="20dp"
                    android:layout_marginTop="8dp"
                    android:background="@drawable/bg_gray"
                    android:hint="Comments"
                    android:gravity="start"
                    android:textAlignment="textStart"
                    android:paddingLeft="10dp"
                    android:maxLines="10"
                    android:minLines="5" />


            </LinearLayout>

            <Button
                android:layout_width="wrap_content"
                android:layout_gravity="end"
                android:layout_margin="20dp"
                android:textSize="18dp"
                android:id="@+id/employee_submit"
                android:textColor="@color/white"
                android:background="@drawable/rounded_border_edittext_filled"
                android:layout_height="wrap_content"
                android:text="Submit"/>



        </LinearLayout>

    </ScrollView>

</LinearLayout>