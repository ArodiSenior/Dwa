<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:orientation="vertical"
    android:background="@drawable/bg"
    android:layout_height="match_parent"
    tools:context="com.dwakenya.homecarehub.newdwa.HORActivity">
  <android.support.v7.widget.Toolbar
      android:id="@+id/my_toolbar"
      app:titleTextColor="@color/colorAccent"
      android:layout_width="match_parent"
      android:layout_height="?attr/actionBarSize"
      android:background="?attr/colorPrimary"
      android:elevation="4dp"/>
  <LinearLayout
      android:layout_width="match_parent"
      android:layout_height="wrap_content"
      android:layout_marginTop="60dp"
      android:weightSum="2">

      <android.support.v7.widget.CardView
          android:layout_width="match_parent"
          android:layout_height="120dp"
          android:layout_margin="5dp"
          android:onClick="onClick"
          android:layout_weight="1"
          app:cardBackgroundColor="@color/colorPrimary"
          app:cardCornerRadius="12dp"
          app:cardElevation="6dp"
          android:id="@+id/aggrement"
          >

          <LinearLayout
              android:layout_width="wrap_content"
              android:orientation="vertical"
              android:paddingTop="20dp"
              android:paddingBottom="20dp"
              android:layout_height="match_parent">


              <ImageView
                  android:layout_width="match_parent"
                  android:src="@drawable/resource"
                  android:layout_height="50dp"
                  />
              <TextView
                  android:id="@+id/agreename"
                  android:layout_width="match_parent"
                  android:layout_height="wrap_content"
                  android:text="Employer Resources"
                  android:textAlignment="center"
                  android:textColor="@color/colorAccent"
                  android:textStyle="normal"
                  android:textSize="15sp"  />

          </LinearLayout>


      </android.support.v7.widget.CardView>

    <android.support.v7.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="120dp"
        android:layout_margin="5dp"
        android:layout_weight="1"
        app:cardBackgroundColor="@color/colorPrimary"
        android:onClick="onClick"
        app:cardCornerRadius="12dp"
        app:cardElevation="6dp"
        android:id="@+id/traininghor"
        >

      <LinearLayout
          android:layout_width="wrap_content"
          android:orientation="vertical"
          android:paddingTop="20dp"
          android:paddingBottom="20dp"
          android:layout_height="match_parent">
        <ImageView
            android:layout_width="match_parent"
            android:src="@drawable/training"
            android:layout_height="50dp"
            />
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Training Program"
            android:textAlignment="center"
            android:textColor="@color/colorAccent"
            android:textStyle="normal"
            android:textSize="15sp"  />

      </LinearLayout>


    </android.support.v7.widget.CardView>


  </LinearLayout>
  <LinearLayout
      android:layout_width="match_parent"
      android:layout_height="wrap_content"
      android:layout_marginTop="60dp"
      android:weightSum="2">

      <android.support.v7.widget.CardView
          android:layout_width="match_parent"
          android:layout_height="120dp"
          android:layout_margin="5dp"
          android:onClick="onClick"
          android:layout_weight="1"
          app:cardBackgroundColor="@color/colorPrimary"
          app:cardCornerRadius="12dp"
          app:cardElevation="6dp"
          android:id="@+id/horfeedback"
          >

          <LinearLayout
              android:layout_width="wrap_content"
              android:orientation="vertical"
              android:paddingTop="20dp"
              android:paddingBottom="20dp"
              android:layout_height="match_parent">


              <ImageView
                  android:layout_width="match_parent"
                  android:src="@drawable/feedback"
                  android:layout_height="50dp"
                  />
              <TextView
                  android:id="@+id/hosname"
                  android:layout_width="match_parent"
                  android:layout_height="wrap_content"
                  android:text="Feedback"
                  android:textAlignment="center"
                  android:textColor="@color/colorAccent"
                  android:textStyle="normal"
                  android:textSize="15sp"  />

          </LinearLayout>


      </android.support.v7.widget.CardView>
    <android.support.v7.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:id="@+id/hor"
        >

    </android.support.v7.widget.CardView>
